<%- include("header") -%>

    <body>
        <div onclick="window.location.href='/logout'" class="buttonDiv"><button class="logOutBtn" type="submit">Log Out</button></div>

        <div class="box" id="heading">

            <h1 id="listTitle">
                <%=htmlTitle%>
            </h1>
        </div>
        <h1 class="title">To-Do-List</h1>


        <div class="box">

            <% htmlList.forEach((item) => { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" onChange="this.form.submit()" value=<%=item._id %>>
                        <p>
                            <%=item.listItem%>
                        </p>
                        <input type="hidden" name="hiddenInput" value=<%=item.name%>>
                    </div>
                </form>
                <% }) %>
                    <form action="/list" method="post">
                        <input id="inp" type="text" name="newItem" placeholder="Add an item." autofocus autocomplete="off" required>
                        <button class="addButton" type="submit" name="itemAdderBtn">+</button>


                    </form>
        </div>







        <% if (htmlList.length> 0) { %>
            <script type="text/javascript">
                document.querySelector("#inp").placeholder = "Anything Else?";
            </script>
            <% } %>

